# =====================================================
# MedAI Backend - Environment Variables
# =====================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control
# =====================================================

# =====================================================
# SERVER CONFIGURATION
# =====================================================
NODE_ENV=development
PORT=3000
HOST=localhost

# =====================================================
# DATABASE - MONGODB
# =====================================================
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/medaid-modules

# Or MongoDB Atlas (Cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/medaid-modules

# =====================================================
# SUPABASE CONFIGURATION
# =====================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# =====================================================
# AUTHENTICATION & SECURITY
# =====================================================
# Generate secure secrets: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_minimum_32_characters
JWT_EXPIRY=7d

REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRY=30d

# Encryption Key (32 characters)
ENCRYPTION_KEY=your_32_character_encryption_key

# Password Hashing
SALT_ROUNDS=12

# =====================================================
# CORS CONFIGURATION
# =====================================================
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8080

# =====================================================
# RATE LIMITING
# =====================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# FILE UPLOAD CONFIGURATION
# =====================================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# =====================================================
# EXTERNAL APIS
# =====================================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
NEWS_API_KEY=your_news_api_key

# OpenAI (Optional - for AI features)
OPENAI_API_KEY=your_openai_api_key

# PubMed API (Optional - for medical research)
PUBMED_API_KEY=your_pubmed_api_key

# SMS Gateway (for OTP)
SMS_GATEWAY_API_KEY=your_sms_gateway_api_key
SMS_GATEWAY_URL=https://api.smsprovider.com

# =====================================================
# PYTHON SEARCH SERVICE
# =====================================================
SEARCH_SERVICE_HOST=localhost
SEARCH_SERVICE_PORT=5000

# =====================================================
# LOGGING
# =====================================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ENABLE_CONSOLE_LOG=true

# =====================================================
# FEATURE FLAGS
# =====================================================
ENABLE_AUDIT_LOGGING=true
ENABLE_CRON_JOBS=true

# =====================================================
# ABDM INTEGRATION
# =====================================================
ABDM_SANDBOX_URL=https://sandbox.abdm.gov.in
ABDM_CLIENT_ID=your_abdm_client_id
ABDM_CLIENT_SECRET=your_abdm_client_secret
